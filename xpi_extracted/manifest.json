{
  "manifest_version": 3,
  "name": "ViésPolítico",
  "version": "1.2.1",
  "description": "Análise política automática do Instagram",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "viespolitico@cyberjulio.dev"
    }
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["seed_profiles.json"],
      "matches": ["https://www.instagram.com/*"]
    }
  ]
}
