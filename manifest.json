{
  "manifest_version": 2,
  "name": "ViesPolítico",
  "version": "1.2.0",
  "description": "Análise política automática do Instagram",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "https://www.instagram.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  
  "web_accessible_resources": [
    "seed_profiles.json"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ViesPolítico"
  }
}
